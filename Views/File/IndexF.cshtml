@model IEnumerable<u18220909_HW03.Models.FileModel>

@{
    ViewBag.Title = "FileView";
}

<h2>Documents any file type</h2>
<h5>....."Media/Documents/"folder</h5>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
  
<table class="table">
    <thead class="thead-dark">
        <tr>        
            <th style="width: 50%">File Name</th>
            <th >DOWNLOAD OPTION</th>
            <th >DELETE OPTION</th>
        </tr>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>@item.FileName</td>
        <td>
            <button class="btn btn-success">@Html.ActionLink("Download", "Download", new { FileName =item.FileName })</button>
        </td>
        <td>
            <button class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { FileName = item.FileName })</button>

        </td>
    </tr>
}

</table>
